<body>

  <%= notice %>

  <h1>Books</h1>

  <table>

    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <% @books.each do |book| %>
      <thead>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show', book_path(book.id) %></td>
          <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
        </tr>
      </thead>
    <% end %>

  </table>

  <h2>New book</h2>

  <% if @book.errors.any? %>
    <%= @book.errors.count %> error prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


  <%= form_with model: @book do |f| %>
    <div class="field">
      <label for="book_title">Title</label>
      <div class="block">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="field">
      <label for="book_Body">Body</label>
      <div class="block">
        <%= f.text_area :body %>
      </div>
    </div>
    <div class="submit">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>